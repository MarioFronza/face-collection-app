<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/photosFragment">



    <fragment
        android:id="@+id/photosFragment"
        android:name="com.mariofronza.face_collection_app.ui.photos.PhotosFragment"
        android:label="fragment_photos"
        tools:layout="@layout/fragment_photos" >
        <action
            android:id="@+id/action_photosFragment_to_handlePhotoFragment"
            app:destination="@id/handlePhotoFragment" />
    </fragment>

    <fragment
        android:id="@+id/handlePhotoFragment"
        android:name="com.mariofronza.face_collection_app.ui.photos.HandlePhotoFragment"
        android:label="fragment_handle_photo"
        tools:layout="@layout/fragment_handle_photo" >
        <action
            android:id="@+id/action_handlePhotoFragment_to_photosFragment"
            app:destination="@id/photosFragment" />
    </fragment>

</navigation>